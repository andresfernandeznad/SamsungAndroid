<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.uma.muii.apdm.parallelbasic.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <Button
            android:text="@string/increment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/incrementbutton"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textSize="22sp"/>

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/incrementval"
            android:layout_weight="1"
            android:textSize="22sp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <Button
            android:text="@string/dowork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doworkbutton"
            android:layout_weight="1"
            android:textSize="22sp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <CheckBox
            android:text="@string/asynctask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/asynctaskcheckbox"
            android:layout_weight="0"
            android:textSize="22sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="left|center_horizontal">

            <RadioButton
                android:text="@string/javathreads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/javathreadradiobutton"
                android:layout_weight="1"
                android:textSize="22sp" />

            <RadioButton
                android:text="@string/executor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/executorradiobutton"
                android:layout_weight="1"
                android:textSize="22sp" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Number of tasks: "
            android:id="@+id/numberoftasks" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNunThreads"
            android:numeric="integer"
            android:text="10"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/stat"
            android:id="@+id/stats" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/correctTextView"
        android:layout_weight="0"
        android:textSize="22sp"
        android:gravity="center_horizontal" />

</LinearLayout>
